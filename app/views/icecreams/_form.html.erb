<%= form_for @icecream, url: icecream_url(@icecream, @truck) do |f| %> <!-- BLOG POST -->
        <%= f.label "Icecream Name: " %>
        <%= f.text_field :name %><br>
        <%= f.label "Price" %>
        <%= f.text_field :price%><br>
        <%= f.collection_check_boxes :flavor_ids, Flavor.all - @but_not_menu, :id, :name %>
        <br>
        <strong>New Flavor</strong>
        <br>
        <%= f.fields_for :flavors, Flavor.new do |flavors_field| %> <!-- BLOG POST nested attributes -->
            <%= flavors_field.label "Flavor Name: " %>
            <%= flavors_field.text_field :name %>
        <% end %>

        <%= f.submit %>
<% end %>