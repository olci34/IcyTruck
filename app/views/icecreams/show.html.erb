<h1><%= @icecream.name %></h1>

<h4><i>Flavors</i></h4>

<% @icecream.flavors.each do |fl| %>
    <i>| <%= fl.name %> |</i>
<% end %>
<br>

<% if session[:truck_id] == params[:truck_id].to_i %> <!-- HELPER METHOD -->
    <%= button_to "Edit", edit_truck_icecream_path(@truck, @icecream), method: :get %>
    <%= button_to "Delete", truck_icecream_path(@truck, @icecream), method: :delete %>
<% end %>