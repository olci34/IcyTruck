<h1>Icecream Truck Log In</h1>

<%= form_tag truck_login_path do %>
    <%= label_tag "Email: " %>
    <%= text_field_tag "truck[email]" %><br>
    <%= label_tag "Password: " %>
    <%= password_field_tag "truck[password]" %><br>
    <%= submit_tag "Log In" %>
<% end %>

<div class="facebook-login">
    <%= link_to "Log In via Facebook Account", "/auth/facebook" %>
</div>