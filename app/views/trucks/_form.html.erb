<%= render partial: "application/errors", locals: {errors: @truck.errors.full_messages.to_sentence}%>

<%= form_for @truck do |f| %>
    <%= f.label "Truck Name: " %><br>
    <%= f.text_field :name %><br>
    <%= f.label "Email: " %><br>
    <%= f.text_field :email %><br>
    <%= f.label "Password: " %><br>
    <%= f.password_field :password %><br>
    <%= f.submit %>
<% end %>