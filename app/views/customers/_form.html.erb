<%= form_for @customer do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %><br>
    <%= f.label :zipcode %>
    <%= f.number_field :zipcode, min: 0 %><br>
    <%= f.label :email %>
    <%= f.text_field :email %><br>
    <%= f.label :password %>
    <%= f.text_field :password %><br>
    <%= f.submit %>
<% end %>