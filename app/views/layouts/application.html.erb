<!DOCTYPE html>
<html>
  <head>
    <title>IcyTruck</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <% flash.each do |type, msg| %>
      <div class="form-error">
        <%= msg %>
      </div>
    <% end %>

    <div class="nav-bar">
      <% if session[:truck_id] %>
        <%= link_to "Settings", edit_truck_path(current_truck) %>
        <%= link_to "My Menu", truck_path(current_truck) %>
        <%= link_to "Orders", truck_orders_path(current_truck)%>
        <%= link_to "Log Out", logout_path %>
      <% elsif session[:customer_id] %>
        <%= link_to "Icecream Trucks", customers_path %>
        <%= link_to "My Wallet", wallet_path %>
        <%= link_to "My Account", edit_customer_path(current_customer)%>
        <%= link_to "Log Out", logout_path %>
      <% else %>
        <%= link_to "Icecream Truck Sign Up", truck_signup_path %>
        <%= link_to "Icecream Truck Log In", truck_login_path %>
        <%= link_to "Customer Sign Up", signup_path %>
        <%= link_to "Customer Log In", login_path %>
      <% end %>
      

    <%= yield %>
  
  </body>
</html>
